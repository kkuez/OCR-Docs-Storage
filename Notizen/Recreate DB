Drop Table AllowedUsers;
create Table AllowedUsers(name TEXT PRIMARY KEY, password TEXT);
Drop Table Bons;
create table Bons (belongsToDocument INTEGER, sum REAL, uid TEXT);
Drop Table CalendarTasks;
create Table CalendarTasks(name TEXT, user TEXT, taskType TEXT, strategyType TEXT, eID TEXT, time TEXT, Foreign key(user) References AllowedUsers(name));
Drop Table Documents;
create table Documents (id INTEGER, content TEXT, originalFile TEXT, date TEXT, user TEXT, inZipFile TEXT, sizeOfOriginalFile INTEGER);
Drop Table ShoppingList;
create Table ShoppingList(item TEXT);
Drop Table StandardList;
create Table StandardList(item TEXT);
Drop Table Memos;
create Table Memos(id INTEGER PRIMARY KEY, memoText TEXT, dateTime TEXT);
Drop Table Users_Memos;
create Table Users_Memos(username TEXT, memoid INTEGER, FOREIGN KEY (username) REFERENCES AllowedUsers(name), FOREIGN KEY (memoid) REFERENCES Memos(id), PRIMARY KEY(username, memoid));